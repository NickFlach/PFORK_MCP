# Production Environment Configuration
NODE_ENV=production
PORT=3001

# Logging
LOG_LEVEL=info

# NEO X Network Configuration
NETWORK=neo-x
CHAIN_ID=47763
RPC_URLS=https://mainnet-2.rpc.banelabs.org,https://mainnet-1.rpc.banelabs.org,https://neo-x.rpc.thirdweb.com
EXPLORER_URL=https://xexplorer.neo.org

# Contract Addresses (Production)
CONTRACT_ADDRESSES={"PFORKToken":"0x216490C8E6b33b4d8A2390dADcf9f433E30da60F","PitchforksGovernance":"0x1234567890123456789012345678901234567890","PitchforksTreasury":"0x0987654321098765432109876543210987654321","ProtocolAdapter":"0x1111111111111111111111111111111111111111","DexAdapter":"0x2222222222222222222222222222222222222222","FerryAdapter":"0x3333333333333333333333333333333333333333"}

# Redis Configuration
REDIS_HOST=redis-cluster.pitchforks.io
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=1

# Rate Limiting (Production - Stricter)
RATE_LIMIT_PUBLIC_MAX=100
RATE_LIMIT_AUTHENTICATED_MAX=1000
RATE_LIMIT_GOVERNANCE_MAX=5
RATE_LIMIT_TREASURY_MAX=10
RATE_LIMIT_TRADING_MAX=20
RATE_LIMIT_ANALYTICS_MAX=50

# Cache TTL (Production - Optimized)
CACHE_TTL_CONTRACT_DATA=60
CACHE_TTL_API_RESPONSE=30
CACHE_TTL_RATE_LIMIT=300

# Authentication
SKIP_RATE_LIMIT_FOR_ADMIN=false
ADMIN_ADDRESSES=0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb7,0x8f3a2b1c4d5e6f7890123456789012345678901

# Production Keys (Should be managed securely)
DEVELOPER_ADDRESS=
DEVELOPER_PRIVATE_KEY=

# API Configuration
ALLOWED_ORIGINS=https://pitchforks.io,https://protocol.pitchforks.io,https://dex.pitchforks.io,https://ferry.pitchforks.io

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=5000

# Transaction Queue
TX_QUEUE_MAX_SIZE=1000
TX_QUEUE_MAX_ATTEMPTS=3
TX_QUEUE_RETRY_DELAY_BASE=5000
TX_QUEUE_PROCESSING_BATCH_SIZE=10

# Health Checks
HEALTH_CHECK_INTERVAL=30000
CONTRACT_HEALTH_CHECK_INTERVAL=60000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_LOGGING=true
MAX_REQUEST_SIZE=10485760
ENABLE_HELMET=true

# Performance
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000
